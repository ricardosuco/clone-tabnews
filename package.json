{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Implementação do http://tabnews.com.br para o https://curso.dev",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && migration:up && next dev",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand\"",
    "test:watch": "jest --runInBand --watchAll",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:logs": "docker compose -f infra/compose.yaml logs -f",
    "services:recreate": "docker compose -f infra/compose.yaml up -d --force-recreate",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "wait-for-postgres": "node  infra/scripts/wait-for-postgres.js",
    "prepare": "husky",
    "commit": "cz"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "16.4.7",
    "dotenv-expand": "11.0.6",
    "next": "13.1.6",
    "node-pg-migrate": "6.2.2",
    "pg": "8.11.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "commitizen": "4.3.0",
    "concurrently": "8.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "eslint-config-next": "15.1.3",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.10.0",
    "husky": "9.1.4",
    "jest": "29.6.2",
    "prettier": "3.4.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
